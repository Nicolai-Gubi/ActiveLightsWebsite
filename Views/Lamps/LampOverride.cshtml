@model LampOverrideViewModel
@{
    ViewData["Title"] = "Override Lamp";
}

<div class="text-center">
    <h1 class="display-4">Override Lamp Light Level</h1>
</div>

<h4>Lamp - @Model.LampItemId</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.LampItemId" class="control-label"></label>
                <input asp-for="@Model.LampItemId" class="form-control" readonly />
                <span asp-validation-for="@Model.LampItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Level" class="control-label"></label>
                <input asp-for="@Model.Level" class="form-control" />
                <span asp-validation-for="@Model.Level" class="text-danger"></span>
            </div>
            <div> </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>
<p></p>
<div>
    <a asp-action="AllLamps" class="btn btn-primary">Back to List</a>
</div>
