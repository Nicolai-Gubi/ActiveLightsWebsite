@model IEnumerable<LampError>
@{
    ViewData["Title"] = "All Errors";
}

<div class="text-center">
    <h1 class="display-4">All Errors</h1>
</div>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>Created At</th>
            <th>Lamp Id</th>
            <th>ErrorPower</th>
            <th>ErrorLamp</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var lampError in Model)
        {
            <tr>
                <td>@lampError.CreatedAt</td>
                <td>@lampError.LampId</td>
                @if (lampError.ErrorPower)
                {
                    <td class="table-danger">ERROR!</td>
                }
                else
                {
                    <td></td>
                }
                @if (lampError.Errorlamp)
                {
                    <td class="table-danger">ERROR!</td>
                }
                else
                {
                    <td></td>
                }
            </tr>
        }
    </tbody>
</table>
